  Vcl.Grids, Vcl.DBGrids, UserData, AccountCreation, Vcl.ExtCtrls;

type
  TForm2 = class(TForm)
    DBGrid1: TDBGrid;
    ComboBoxAdminMenuPowerLevel: TComboBox;
    ComboBoxAdminMenuStatus: TComboBox;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    DataSource1: TDataSource;
